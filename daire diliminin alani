
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner b=new Scanner(System.in);
		
		System.out.println("lutfen yaricap giriniz: ");
		double r=b.nextDouble();
		
		System.out.println("lutfen aciyi giriniz: ");
		double a=b.nextDouble();
		
		
		double pi=3.14;
		double diliminAlani= (pi*(r*r)*a) / 360;
		
		System.out.println("Alan:"+diliminAlani);
		

	}

}
